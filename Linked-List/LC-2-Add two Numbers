// Problem: LeetCode 2 - Add Two Numbers
// Platform: LeetCode
// Language: C++
// Approach: Linked List Traversal + Carry Propagation
// Time Complexity: O(max(m, n)) — iterate through both lists
// Space Complexity: O(max(m, n)) — result list

class Solution {
public:
    ListNode* addTwoNumbers(ListNode* l1, ListNode* l2) {
        
        ListNode* newhead = nullptr;   // Head of the resulting list
        ListNode* current = nullptr;   // Pointer to last node in result
        
        int carry = 0;                 // Carry for addition

        // Traverse both lists until both are fully processed
        while (l1 != nullptr || l2 != nullptr) {

            
            int sum = carry;           // Start with carry



            // Add digit from l1 (if exists)
            if (l1 != nullptr) {
                sum += l1->val;
                l1 = l1->next;
            }



            // Add digit from l2 (if exists)
            if (l2 != nullptr) {
                sum += l2->val;
                l2 = l2->next;
            }


            // Calculate new carry and digit
            carry = sum / 10;
            sum = sum % 10;


            // Create new node with the computed digit
            ListNode* newnode = new ListNode(sum);

            // First node → initialize head
            if (newhead == nullptr) {
                newhead = newnode;
            } else {
                // Attach to result list
                current->next = newnode;
            }


            // Move current pointer forward
            current = newnode;
        }

        // If carry remains after full traversal, create a new node
        if (carry != 0) {
            ListNode* newnode = new ListNode(carry);
            current->next = newnode;
        }


        return newhead;   // Return the head of the result list
    }
};
