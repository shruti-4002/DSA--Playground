// Problem: LeetCode 733 - Flood Fill
// Platform: LeetCode
// Language: C++
// Approach: DFS (Depth-First Search)
// Time Complexity: O(m * n) — each cell visited once
// Space Complexity: O(m * n) — recursion stack in worst case

class Solution {
public:

    void dfs(vector<vector<int>>& image, int color, int i, int j, int m, int n, int target) {
        // Boundary checks
        if (i < 0 || j < 0 || i >= m || j >= n) return;

        // If already the new color OR not the target color, stop
        if (image[i][j] == color) return;
        if (image[i][j] != target) return;

        // Fill current cell
        image[i][j] = color;

        // Explore 4-directionally
        dfs(image, color, i + 1, j, m, n, target);
        dfs(image, color, i - 1, j, m, n, target);
        dfs(image, color, i, j + 1, m, n, target);
        dfs(image, color, i, j - 1, m, n, target);
    }

    vector<vector<int>> floodFill(vector<vector<int>>& image, int sr, int sc, int color) {
        int m = image.size();
        int n = image[0].size();
        int target = image[sr][sc];

        // If target already matches color, nothing to change
        if (target == color) return image;

        dfs(image, color, sr, sc, m, n, target);
        return image;
    }
};
